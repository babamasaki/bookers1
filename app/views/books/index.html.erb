<body>
 <header>
 	<h1>Books</h1>
  <table>
	<thead>
	  <tr>
		<th>title</th>
		<th>body</th>
		<th></th>
		<th></th>
		<th></th>
	  </tr>
    </thead>
 <% @books.each do |book| %>
    <tbody>
	   <tr>
	       <td><%= book.title %></td>
	       <td><%= book.body %></td>

          <td>
	        <%= link_to 'show', book_path(book.id),class:  "show_#{book.id}"%>

	      </td>
	      <td>
	      	<%= link_to 'edit', edit_book_path(book.id),class: "edit_#{book.id}" %>
	       </td>
	       <td>
	        <%= link_to 'Destroy', book_path(book.id),
                class: "destroy_#{book.id}",
	         method: :delete, data: {confirm: 'Are you sure?'} %>
	        <!-- #Destroyの場合メゾットを入れないといけない -->
           </td>
         <% end %>
	    </tr>
     </tbody>
    </table>

      <%= form_for @book  do |f| %>
    <h2>New book</h2>

	<h4> Title</h4>
	<%= f.text_field :title, class: "book_title" %>
	<!-- クラス指定でbook_titleになる。 -->
	<h4> Body</h4>
	<%= f.text_area :body, class: "book_body" %>
	<br>
	<%= f.submit 'Create Book' %>

     <% end %>
</body>

